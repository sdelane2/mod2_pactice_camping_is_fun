<h1>Create a Camper</h1>

<% if flash[:camper_errors]%>
    <% flash[:camper_errors].each do |error|%>
        <p style="color:red;"><%=error %></p>
    <%end  %>
<% end%>

<%= form_for @camper do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>
<%= f.label :age %>
<%= f.number_field :age %>
<%= f.submit %>
<%end %>