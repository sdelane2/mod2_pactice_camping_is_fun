<h1>Signup for an Activity</h1>

<%= form_for @signup do |f| %>
<%= f.label :camper_id %>
<%= f.collection_select :camper_id, Camper.all, :id, :name %>
<%= f.label :activity_id %>
<%= f.collection_select :activity_id, Activity.all, :id, :name %>
<%= f.label :time %>
<%= f.select :time, options_for_select(0..23)%>
<%= f.submit %>
<%end %>